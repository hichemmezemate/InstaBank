<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}InstaBank{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        
        <link rel="stylesheet" type="text/css" media="all" href="{{ asset('styles/style.css') }}">
        {% block stylesheets %}
            <!-- {{ encore_entry_link_tags('app') }} -->
        {% endblock %}
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="example-wrapper">
            <nav class="navbar navbar-light bg-success ">
                <div class="container-fluid">
                    <span class="navbar-brand mb-3 h1 fs-1 text-light">
                        <a class="home_link" href="{{path('app_home')}}">
                            <div class="col-md-2">
                                <img src={{ asset('images/Logo.svg') }} class="card-img-top" alt="...">
                                InstaBank
                            </div>
                        </a>
                    </span>
                    <form class="">
                        {% if app.user %}
                            <a  href="{{ path('app_virement') }}">
                                <button class="btn btn-light mx-1" type="button">Virements</button>
                            </a>
                            <a  href="{{ path('app_compte_new') }}">
                                <button class="btn btn-light mx-1" type="button">Nouveau compte</button>
                            </a>
                            <a  href="{{ path('app_logout') }}">
                                <button class="btn btn-light mx-1" type="button">Déconnexion</button>
                            </a>
                        {% else %}
                            <a href="{{path('app_login')}}">
                                <button class="btn btn-light mx-4" type="button">Connexion</button>
                            </a>
                            <a href="{{path('app_register')}}">
                                <button class="btn btn-light mx-4" type="button">Inscription</button>
                            </a>
                        {% endif%}
                    </form>
                </div>
            </nav>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
