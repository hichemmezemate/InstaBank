{% extends 'base.html.twig' %}

{% block title %}Compte index{% endblock %}

{% block body %}
    <h1>Compte index</h1>

    <table class="table table-secondary px-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Propriétaire</th>
                <th>Solde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.user.nom }} {{ compte.user.prenom }}</td>
                <td>{{ compte.solde }} €</td>
                <td>
                    <a href="{{ path('app_compte_show', {'id': compte.id}) }}">show</a>
                    <a href="{{ path('app_compte_edit', {'id': compte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de données</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
